<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/gender"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/male" />

            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toRightOf="@+id/gender"
                android:fontFamily="@font/poppins"
                android:text="John Doe"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp" />

            <TextView
                android:id="@+id/child_vacciane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/child_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/gender"
                android:fontFamily="@font/poppins"
                android:text="IPV Vaccine"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/gender" />

            <Switch
                android:id="@+id/request_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/accept"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp" />


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="Accept request"
                android:layout_below="@+id/request_switch"
                android:textColor="@color/accepted"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>